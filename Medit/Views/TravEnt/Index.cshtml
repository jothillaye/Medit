@model IEnumerable<Medit.TravEnt>

@{
    ViewBag.Title = "Liste des Travailleurs dans une Entreprise";
}

<h2>Liste des Travailleurs dans une Entreprise</h2>

<p>
    @Html.ActionLink("Nouveau lien Travailleur/Entreprise", "Create")
</p>
<table id="tabTravEnt">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id_Travailleur)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Numero_Entreprise)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Code_Profession)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.isSoumis)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Interlocuteur)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateEntree)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateSortie)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Travailleur.NomPre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Entreprise.Denomination)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Profession.LangueProfessions.ElementAt((int)item.Entreprise.Id_Langue - 1).Denomination)
        </td>
        <td align="center">
            @Html.DisplayFor(modelItem => item.isSoumis)
        </td>
        <td align="center">
            @Html.DisplayFor(modelItem => item.InterlocuteurFormated)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateEntree)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateSortie)
        </td>   
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id_TravEnt }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id_TravEnt }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id_TravEnt })
        </td>
    </tr>
}

</table>
