@model IEnumerable<Medit.Travailleur>

@{
    ViewBag.Title = "Liste des Travailleurs";
}

<h2>Liste des Travailleurs</h2>

<p>
    @Html.ActionLink("Nouveau Travailleur", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prenom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumTel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Adresse)
        </th>
                <th>
            @Html.DisplayNameFor(model => model.NumDossierMedical)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Prenom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumTel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Adresse)<br />
            @Html.DisplayFor(modelItem => item.Adresse2)
        </td>
        <td align="center">
            @Html.DisplayFor(modelItem => item.NumDossierMedical)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id_Travailleur }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id_Travailleur }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id_Travailleur  })
        </td>
    </tr>
}

</table>
